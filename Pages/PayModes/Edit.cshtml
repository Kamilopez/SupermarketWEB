@page
@model SupermarketWEB.Pages.PayModes.EditModel
@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PayMode</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PayMode.Id" />
            <div class="form-group">
                <label asp-for="PayMode.payment_method" class="control-label"></label>
                <input asp-for="PayMode.payment_method" class="form-control" />
                <span asp-validation-for="PayMode.payment_method" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayMode.Cedula" class="control-label"></label>
                <input asp-for="PayMode.Cedula" class="form-control" />
                <span asp-validation-for="PayMode.Cedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayMode.Phone" class="control-label"></label>
                <input asp-for="PayMode.Phone" class="form-control" />
                <span asp-validation-for="PayMode.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-page="./Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

